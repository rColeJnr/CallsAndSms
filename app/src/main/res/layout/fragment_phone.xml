<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <HorizontalScrollView
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumber"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:maxLines="1"
                android:ellipsize="none"
                android:scrollHorizontally="true"/>
        </HorizontalScrollView>

        <ImageButton
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/backspace"
            android:src="@drawable/ic_backspace"
            android:contentDescription="@string/backspace"
            style="@style/Widget.AppCompat.ActionButton.Overflow"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:useDefaultMargins="true"
        android:columnCount="3"
        android:rowCount="4">

        <ImageButton
            android:id="@+id/one"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_one"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/two"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_two"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/three"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_three"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>




        <ImageButton
            android:id="@+id/four"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_four"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/five"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_five"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/six"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_six"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/seven"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_seven"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/eight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_eight"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/nine"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_nine"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/star"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_star"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/zero"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_zero"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>


        <ImageButton
            android:id="@+id/hash"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_hash"
            android:contentDescription="@string/numpad"
            style="@style/PhoneButton"/>

    </GridLayout>

    <ImageButton
        android:id="@+id/callBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_phone_"
        android:contentDescription="@string/make_call"
        style="@style/PhoneButton"
        app:tint="@android:color/holo_green_dark"
        />

</LinearLayout>